{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "backend-profiles": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "allowRemoteDCsForLocalConsistencyLevel": {
            "type": "boolean"
          },
          "localDc": {
            "type": "string"
          },
          "usedHostsPerRemoteDc": {
            "type": "integer"
          },
          "hosts": {
            "type": "string"
          },
          "replicationStrategy": {
            "type": "string"
          },
          "replicationFactor": {
            "type": "integer"
          },
          "user": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "type"
        ]
      }
    }
  },
  "required": [
    "backend-profiles"
  ],
  "additionalProperties": false
}